---
title:      Content index
desc:       Displays a list of all pages marked where published = true.
layout:     layout-basic
noindex:    true
---

<div class="page-index">



    <h2>Index
        <!-- build:gridSymbol (production-build)  -->
        (dev-build)
        <!-- /build -->
    </h2>

    <div class="list-group">

        {{#each pages}}

            {{#unless data.noindex}}

            <a href="{{ this.filename }}" class="list-group-item">

                <h4 class="list-group-item-heading">{{ data.title }}</h4>

                <p class="list-group-item-text">{{ data.desc }}</p>

            </a>

            {{/unless}}

        {{/each}}

    </div>

</div>

